{% block _page_buttons_panel_widget %}
    <div class="pull-right title-buttons-container">
        {{ block_widget(block) }}
        {% if form_method is not same as('GET') %}
            <input type="hidden" name="input_action" value="" data-form-id="{{ form_name }}"/>
        {% endif %}
    </div>
{% endblock %}

{% block _page_content_widget %}
    <div class="layout-content">
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _navigation_content_tags_widget %}
    {% import 'OroNavigationBundle:Include:contentTags.html.twig' as navigationMacro %}
    {{ navigationMacro.navigationContentTags(entity) }}
{% endblock %}
